<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.smallc.footballcollection.repository.IAccountRepository">
    <select id="get" parameterType="int" resultType="cn.smallc.footballcollection.entity.account.Account">
        SELECT * FROM account WHERE id = #{id}
    </select>

    <update id="transfer">
        UPDATE account set money=#{money} WHERE id=#{id}
    </update>


</mapper>
